{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/bdirck/athletic-annex-blog-schema/refs/heads/main/blog_schema_with_taxonomy.json",
  "title": "Athletic Annex Blog Post (with taxonomy)",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/bdirck/athletic-annex-blog-schema/refs/heads/main/blog_schema.json"
    },
    {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "category_id": {
          "type": "string",
          "description": "One approved category ID (exactly one).",
          "enum": ["ACC","REC","APP","SAF","COM","NUT","INJ","PER","TRL","TRN","SHO"],
          "examples": ["SAF"]
        },
        "tag_ids": {
          "type": "array",
          "description": "3–6 approved tag IDs (prefer same-parent first).",
          "items": {
            "type": "string",
            "pattern": "^(ACC|APP|SHO|TRN|COM|REC|INJ|SAF|NUT|TRL|PER)_[A-Z0-9-]+$"
          },
          "uniqueItems": true,
          "minItems": 3,
          "maxItems": 6,
          "examples": [["SAF_HEADLAMP","SAF_VISIBILITY","COM_INDIANAPOLIS","ACC_GARMIN"]]
        },
        "new_tag_proposals": {
          "type": "array",
          "description": "Optional, human-readable proposals when no existing tag fits. Do NOT invent IDs here.",
          "items": { "type": "string", "minLength": 2, "maxLength": 80 },
          "maxItems": 10,
          "examples": [["women’s self-defense", "Monon Trail safety tips"]]
        }
      },
      "required": ["category_id", "tag_ids"]
    }
  ]
}
